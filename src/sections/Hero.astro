---
import Button from "../components/Button.astro";
---

<section class="bg-gradient-to-r from-black to-violet-800 text-white relative">
  <div class="container mx-auto px-5 max-w-7xl">
    <div class="flex flex-col lg:flex-row lg:items-center">
      <div class="py-20 lg:w-1/3 xl:w-1/2 flex flex-col gap-4 items-start z-10">
        <h1 class="text-5xl xl:text-7xl font-black max-w-[18ch] leading-tight">
          Learn to rock in under 30 days
        </h1>
        <p class="text-lg max-w-[60ch]">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam a urna
          sagittis, accumsan mauris vel.
        </p>
        <Button
          text="Learn more"
          link="#"
          priColor="bg-violet-800"
          secColor="bg-violet-400"
        />
      </div>
      <div class="-mt-28 md:mt-0 lg:w-2/3 xl:w-1/2">
        <img src="/hero.svg" class="pointer-events-none opacity-0" />
        <img
          src="/hero.svg"
          class="pointer-events-none absolute bottom-0 right-0 z-50"
        />
      </div>
    </div>
  </div>
</section>
