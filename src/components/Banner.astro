---
import Button from "./Button.astro";

const { banner } = Astro.props;
const {
  title,
  desc,
  bgColor,
  textColor,
  buttonText,
  buttonLink,
  buttonPriColor,
  buttonSecColor,
} = banner;
---

<section>
  <div class="container mx-auto px-5 py-16 max-w-7xl">
    <div
      class={`px-8 py-12 rounded-lg flex flex-col lg:flex-row justify-between  max-w-2xl lg:max-w-7xl mx-auto ${bgColor} ${textColor}`}
    >
      <div class="lg:w-8/12">
        <h2 class="text-4xl xl:text-5xl font-black">{title}</h2>
        <p class="text-lg mt-2 opacity-80">
          {desc}
        </p>
      </div>

      <div class="z-10 flex-1 flex lg:justify-end items-center mt-6 lg:mt-0">
        <Button
          text={buttonText}
          link={buttonLink}
          priColor={buttonPriColor}
          secColor={buttonSecColor}
        />
      </div>
    </div>
  </div>
</section>
